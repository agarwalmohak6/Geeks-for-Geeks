import java.io.*;
import java.util.*;
class GfG
{
    public static void main (String[] args)
    {
        
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        
        while(t-- > 0)
        {
            String N = sc.next ();

            if (new Sol().balancedNumber (N))
    		    System.out.println (1);
    		else
    		    System.out.println (0);
        }
        
    }
}// } Driver Code Ends


//User function Template for Java

class Sol
{
    Boolean balancedNumber(String N)
    {
        // your code here
        int mid=N.length()/2;
        int lhs=0,rhs=0;
        for(int i=0;i<N.length();i++){
            if(i<mid)
                lhs+=Integer.valueOf(N.charAt(i));
            if(i>mid)
                rhs+=Integer.valueOf(N.charAt(i));
        }
        if(lhs==rhs) return true;
        return false;
    }
}
